<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magento\Braintree\Block\Credit\Calculator\Product\View" name="braintree.credit" template="Magento_Braintree::credit/product/view.phtml" before="product.info" />
        </referenceContainer>

        <referenceContainer name="top.container">
            <block class="Magento\Braintree\Block\Credit\Bml\Banners" name="braintree.bml.center.logo" template="Magento_Braintree::bml.phtml">
                <arguments>
                    <argument name="section" xsi:type="string">productpage</argument>
                    <argument name="position" xsi:type="number">0</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="product.info.addtocart">
            <block class="Magento\Braintree\Block\Credit\Bml\Banners" name="braintree.bml.right.logo" template="Magento_Braintree::bml.phtml">
                <arguments>
                    <argument name="section" xsi:type="string">productpage</argument>
                    <argument name="position" xsi:type="number">1</argument>
                </arguments>
            </block>
            <block name="product.info.addtocart.braintreeOneClick" class="Magento\Braintree\Block\OneClickButton" template="Magento_Braintree::paypal/product_page.phtml" before="-">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="braintree-oneclick" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Braintree/js/view/one-click</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Magento_Braintree/one-click</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="product.info.addtocart.additional">
            <block name="product.info.addtocart.braintreeOneClick.additional" class="Magento\Braintree\Block\OneClickButton" template="Magento_Braintree::paypal/product_page.phtml" before="-">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="braintree-one-click" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Braintree/js/view/one-click</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Magento_Braintree/one-click</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>